<UserControl x:Class="GUI_Creature_Manager.View.CreatureWindow.CreatureWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GUI_Creature_Manager.View.CreatureWindow"
             mc:Ignorable="d" 
             Height="125" Width="125">
    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="80*"/>
        </Grid.RowDefinitions>

        <Grid Background="#3B3838" Margin="2" >
            <TextBlock x:Name="creatureName" Grid.Column="1" Text="tinyObj1" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16"/>
        </Grid>

        <Image Name="creaturePortrait" Margin="3, 1, 3, 3"  Grid.Row="1" Stretch="Fill"/>
    </Grid>
</UserControl>
